{
  "include": ["src", "types"],
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "lib": ["ESNext"],
    "declaration": true,
    "sourceMap": false,
    "outDir": "./dist/esm",
    "rootDir": "./src",
    "removeComments": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
