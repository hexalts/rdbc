{
  "version": "0.2.2",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "yarn lint && yarn doc && tsdx build --writeMeta false && rm dist/*.map",
    "doc": "yarn typedoc src/index.ts",
    "test": "tsdx test",
    "lint": "tsdx lint --fix",
    "prepare": "yarn build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint --fix"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@hexalts/rdbc",
  "author": "azharizkita",
  "module": "dist/rdb.esm.js",
  "size-limit": [
    {
      "path": "dist/rdbc.esm.js",
      "limit": "40 KB"
    },
    {
      "path": "dist/rdbc.cjs.production.min.js",
      "limit": "15 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.2",
    "husky": "^7.0.1",
    "size-limit": "^5.0.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.0",
    "typedoc": "^0.21.5",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "mqtt": "^4.2.8"
  }
}
