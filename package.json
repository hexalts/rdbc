{
  "version": "0.2.0-r1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build && rm dist/*.map",
    "debug": "yarn lint --fix && yarn build && node dist/rdbc.cjs.production.min.js",
    "doc": "yarn typedoc src/index.ts",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "yarn build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@hexalts/rdbc",
  "author": "azharizkita",
  "module": "dist/rdb.esm.js",
  "size-limit": [
    {
      "path": "dist/rdbc.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/rdbc.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.2",
    "husky": "^6.0.0",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "mqtt": "^4.2.6"
  }
}
